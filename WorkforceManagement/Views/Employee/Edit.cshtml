@model WorkforceManagement.Models.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>EmployeeEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" disabled />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentList" class="control-label"></label>
                <select asp-for="Employee.DepartmentId" asp-items="@Model.DepartmentList"></select>
                <br />
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableComputers" class="control-label"></label>
                <select asp-for="Employee.Computer.Id" asp-items="@Model.AvailableComputers"></select>
                <br />
                <span asp-validation-for="Employee.Computer.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingMulti" class="control-label"></label>
                <select asp-for="@Model.AssignedTrainings" asp-items="@Model.TrainingMulti"></select>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
